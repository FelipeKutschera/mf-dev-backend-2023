@{
    ViewData["Title"] = "Redefinir Senha";
}

<h1>Redefinir Senha</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RedefinirSenha" method="post">
            <input type="hidden" name="token" value="@ViewBag.Token" />
            <div class="form-group">
                <label for="novaSenha">Nova Senha</label>
                <input type="password" name="novaSenha" class="form-control" placeholder="Digite sua nova senha" required />
            </div>

            <div class="form-group">
                <input type="submit" value="Redefinir Senha" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
